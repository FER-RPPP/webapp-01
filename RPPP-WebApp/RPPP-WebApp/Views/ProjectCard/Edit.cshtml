@model RPPP_WebApp.Model.ProjectCard

@{
  ViewData["Title"] = "Ažuriraj projektnu karticu";
}

<form asp-route-id="@Model.Iban"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
  <div asp-validation-summary="All"></div>
  <div class="form-group mt-3">
    <label asp-for="Balance" class="form-label">Saldo</label>
    <input asp-for="Balance" class="form-control" type="number" step="0.01" />
    <div class="form-text"><span asp-validation-for="Balance" class="text-danger"></span></div>
  </div>
  <div class="form-group mt-3">
    <label asp-for="ActivationDate" class="form-label">Datum aktivacije</label>
    <input asp-for="ActivationDate" class="form-control" type="date" />
    <div class="form-text"><span asp-validation-for="ActivationDate" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Oib" class="form-label">Vlasnik</label>
    <select class="form-control" asp-for="Oib" asp-items="ViewBag.Owners">
      <option disabled selected value="">Odaberite vlasnika</option>
    </select>
    <div class="form-text"><span asp-validation-for="Oib" class="text-danger"></span></div>
  </div>
  <div class="text-center mt-3">
    <button class="btn btn-primary" type="submit">Spremi</button>
    <a asp-action="Index"
       asp-route-page="@ViewBag.Page"
       asp-route-sort="@ViewBag.Sort"
       asp-route-ascending="@ViewBag.Ascending"
       class="btn btn-secondary">Odustani</a>
  </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}