@model RPPP_WebApp.ViewModels.ProjectCardFilter

<form asp-action="Index" asp-controller="ProjectCard" method="post">
  <div class="form-group mt-3">
    <label asp-for="Oib">Filtriraj po <strong>OIB-u</strong> vlasnika:</label>
    <input asp-for="Oib" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Name">Filtriraj po <strong>imenu</strong> vlasnika:</label>
    <input asp-for="Name" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Surname">Filtriraj po <strong>prezimenu</strong> vlasnika:</label>
    <input asp-for="Surname" class="form-control" />
  </div>
  <div class="mt-3">
    <button type="submit" class="btn btn-primary">Filtriraj</button>
    <a asp-action="Index" asp-controller="ProjectCard" class="btn btn-secondary">Očisti filter</a>
  </div>
</form>
