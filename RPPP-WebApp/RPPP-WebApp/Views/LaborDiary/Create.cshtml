@model RPPP_WebApp.Model.LaborDiary

@{
  ViewData["Title"] = "Novi zapis";
}

<h2 class="mt-3">Unos novog zapisa</h2>

<form asp-action="Create" method="post">
  <div asp-validation-summary="All"></div>
  <div class="mt-3">
    <label asp-for="Date" class="form-label">Datum</label>
    <input asp-for="Date" class="form-control" type="date" />
    <div class="form-text"><span asp-validation-for="Date" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="WorkId" class="form-label">Naziv posla</label>
    <select class="form-control" asp-for="WorkId" asp-items="ViewBag.Works">
        <option disabled selected value="">Odaberite posao</option>
    </select>
    <div class="form-text"><span asp-validation-for="WorkId" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="WorkerId" class="form-label">Ime radnika</label>
    <select class="form-control" asp-for="WorkerId" asp-items="ViewBag.Workers">
        <option disabled selected value="">Odaberite radnika</option>
    </select>
    <div class="form-text"><span asp-validation-for="WorkerId" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="HoursSpent" class="form-label">Utrošeni sati</label>
    <input asp-for="HoursSpent" class="form-control" type="number" step="0.01" />
    <div class="form-text"><span asp-validation-for="HoursSpent" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="LaborTypeId" class="form-label">Vrsta posla</label>
    <select class="form-control" asp-for="LaborTypeId" asp-items="ViewBag.LaborTypes">
        <option disabled selected value="">Odaberite vrstu posla</option>
    </select>
    <div class="form-text"><span asp-validation-for="LaborTypeId" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="LaborDescription" class="form-label">Opis posla</label>
    <input asp-for="LaborDescription" class="form-control" />
    <div class="form-text"><span asp-validation-for="LaborDescription" class="text-danger"></span></div>
  </div>
  <div class="text-center mt-3">
    <button class="btn btn-primary" type="submit">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
  </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}