@model RPPP_WebApp.Model.Transaction

@{
  ViewData["Title"] = "Nova transakcija";
}

<h2 class="mt-3">Unos nove transakcije</h2>

<form asp-action="Create" method="post">
  <div asp-validation-summary="All"></div>
  <div class="mt-3">
    <label asp-for="Iban" class="form-label">IBAN pošiljatelja</label>
    <select class="form-control" asp-for="Iban" asp-items="ViewBag.Ibans">
      <option disabled selected value="">Odaberite IBAN pošiljatelja</option>
    </select>
    <div class="form-text"><span asp-validation-for="Iban" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Recipient" class="form-label">IBAN primatelja</label>
    <input asp-for="Recipient" class="form-control" />
    <div class="form-text"><span asp-validation-for="Recipient" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Amount" class="form-label">Iznos</label>
    <input asp-for="Amount" class="form-control" type="number" step="0.01" />
    <div class="form-text"><span asp-validation-for="Amount" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Date" class="form-label">Datum i vrijeme</label>
    <input asp-for="Date" class="form-control" />
    <div class="form-text"><span asp-validation-for="Date" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Type" class="form-label">Vrsta transakcije</label>
    <select class="form-control" asp-for="Type" asp-items="ViewBag.Types">
      <option disabled selected value="">Odaberite vrstu transakcije</option>
    </select>
    <div class="form-text"><span asp-validation-for="Type" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Purpose" class="form-label">Svrha transakcije</label>
    <select class="form-control" asp-for="Purpose" asp-items="ViewBag.Purposes">
      <option disabled selected value="">Odaberite svrhu transakcije</option>
    </select>
    <div class="form-text"><span asp-validation-for="Purpose" class="text-danger"></span></div>
  </div>
  <div class="text-center mt-3">
    <button class="btn btn-primary" type="submit">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
  </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}