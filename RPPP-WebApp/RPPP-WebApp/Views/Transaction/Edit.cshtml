@model RPPP_WebApp.Model.Transaction

@{
  ViewData["Title"] = "Ažuriraj transakciju";
}

<form asp-route-id="@Model.Iban"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
  <div asp-validation-summary="All"></div>
  <input asp-for="Id" type="hidden" />
  <div class="form-group mt-3">
    <label asp-for="Iban" class="form-label">IBAN pošiljatelja (projektne kartice)</label>
    <select class="form-control" asp-for="Iban" asp-items="ViewBag.Ibans">
      <option disabled selected value="">Odaberite IBAN pošiljatelja</option>
    </select>
    <div class="form-text"><span asp-validation-for="Iban" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Recipient" class="form-label">IBAN primatelja</label>
    <input asp-for="Recipient" class="form-control" />
    <div class="form-text"><span asp-validation-for="Recipient" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Amount" class="form-label">Iznos</label>
    <input asp-for="Amount" class="form-control" type="number" step="0.01" />
    <div class="form-text"><span asp-validation-for="Amount" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Date" class="form-label">Datum i vrijeme</label>
    <input asp-for="Date" class="form-control" />
    <div class="form-text"><span asp-validation-for="Date" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="TypeId" class="form-label">Vrsta transakcije</label>
    <select class="form-control" asp-for="TypeId" asp-items="ViewBag.Types">
      <option disabled selected value="">Odaberite vrstu transakcije</option>
    </select>
    <div class="form-text"><span asp-validation-for="TypeId" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="PurposeId" class="form-label">Svrha transakcije</label>
    <select class="form-control" asp-for="PurposeId" asp-items="ViewBag.Purposes">
      <option disabled selected value="">Odaberite svrhu transakcije</option>
    </select>
    <div class="form-text"><span asp-validation-for="PurposeId" class="text-danger"></span></div>
  </div>
  <div class="text-center mt-3">
    <button class="btn btn-primary" type="submit">Spremi</button>
    <a asp-action="Index"
       asp-route-page="@ViewBag.Page"
       asp-route-sort="@ViewBag.Sort"
       asp-route-ascending="@ViewBag.Ascending"
       class="btn btn-secondary">Odustani</a>
  </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}