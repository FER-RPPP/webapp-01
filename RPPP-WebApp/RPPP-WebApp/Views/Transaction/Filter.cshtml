@model RPPP_WebApp.ViewModels.TransactionFilter

<form asp-action="Index" asp-controller="Transaction" method="post">
  <div class="form-group mt-3">
    <label asp-for="PurposeName">Filtriraj po <strong>svrsi</strong> transakcije:</label>
    <input asp-for="PurposeName" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="TypeName">Filtriraj po <strong>vrsti</strong> transakcije:</label>
    <input asp-for="TypeName" class="form-control" />
  </div>
  <div class="mt-3">
    <button type="submit" class="btn btn-primary">Filtriraj</button>
    <a asp-action="Index" asp-controller="Transaction" class="btn btn-secondary">Očisti filter</a>
  </div>
</form>
