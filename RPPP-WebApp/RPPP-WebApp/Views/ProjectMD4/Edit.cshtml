@model RPPP_WebApp.Model.Project

@{
  ViewData["Title"] = "Ažuriraj projekt";
}

<form asp-route-id="@Model.Id"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
  <div asp-validation-summary="All"></div>
  <input asp-for="Id" type="hidden" />
  <div class="mt-3">
    <label asp-for="Name" class="form-label">Naziv</label>
    <input asp-for="Name" class="form-control" />
    <div class="form-text"><span asp-validation-for="Name" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="Type" class="form-label">Vrsta</label>
    <input asp-for="Type" class="form-control" />
    <div class="form-text"><span asp-validation-for="Type" class="text-danger"></span></div>
  </div>
  <div class="form-group mt-3">
    <label asp-for="OwnerId" class="form-label">Vlasnik</label>
    <select class="form-control" asp-for="OwnerId" asp-items="ViewBag.Owners">
      <option disabled selected value="">Odaberite vlasnika</option>
    </select>
    <div class="form-text"><span asp-validation-for="OwnerId" class="text-danger"></span></div>
  </div>
  <div class="form-group mt-3">
    <label asp-for="ClientId" class="form-label">Klijent</label>
    <select class="form-control" asp-for="ClientId" asp-items="ViewBag.Clients">
      <option disabled selected value="">Odaberite klijenta</option>
    </select>
    <div class="form-text"><span asp-validation-for="ClientId" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="CardId" class="form-label">IBAN</label>
    <select class="form-control" asp-for="CardId" asp-items="ViewBag.Cards">
      <option disabled selected value="">Odaberite karticu</option>
    </select>
    <div class="form-text"><span asp-validation-for="CardId" class="text-danger"></span></div>
  </div>
  <div class="text-center mt-3">
    <button class="btn btn-primary" type="submit">Spremi</button>
    <a asp-action="Index"
       asp-route-page="@ViewBag.Page"
       asp-route-sort="@ViewBag.Sort"
       asp-route-ascending="@ViewBag.Ascending"
       class="btn btn-secondary">Odustani</a>
  </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}