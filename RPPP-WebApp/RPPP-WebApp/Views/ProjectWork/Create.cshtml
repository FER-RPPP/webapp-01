@model RPPP_WebApp.Model.ProjectWork

@{
  ViewData["Title"] = "Nova projektna aktivnost";
}

<h2 class="mt-3">Unos nove projektne aktivnosti</h2>

<form asp-action="Create" method="post">
  <div asp-validation-summary="All"></div>
  <div class="form-group mt-3">
    <label asp-for="Title" class="form-label">Naslov</label>
    <input asp-for="Title" class="form-control" />
    <div class="form-text"><span asp-validation-for="Title" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="ProjectId" class="form-label">Projekt</label>
    <select class="form-control" asp-for="ProjectId" asp-items="ViewBag.Projects">
      <option disabled selected value="">Odaberite projekt</option>
    </select>
    <div class="form-text"><span asp-validation-for="ProjectId" class="text-danger"></span></div>
  </div>
  <div class="mt-3">
    <label asp-for="AssigneeId" class="form-label">Dodijeljeni radnik</label>
    <select class="form-control" asp-for="AssigneeId" asp-items="ViewBag.Assignees">
      <option disabled selected value="">Odaberite radnika</option>
    </select>
    <div class="form-text"><span asp-validation-for="AssigneeId" class="text-danger"></span></div>
  </div>
  <div class="form-group mt-3">
    <label asp-for="Description" class="form-label">Opis</label>
    <input asp-for="Description" class="form-control" />
    <div class="form-text"><span asp-validation-for="Description" class="text-danger"></span></div>
  </div>
  <div class="text-center mt-3">
    <button class="btn btn-primary" type="submit">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
  </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}