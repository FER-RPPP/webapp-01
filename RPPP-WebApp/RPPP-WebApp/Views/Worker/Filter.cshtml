@model RPPP_WebApp.ViewModels.WorkerFilter

<form asp-action="Index" asp-controller="Worker" method="get">
  <div class="form-group">
    <label asp-for="Organization">Filtriraj po <strong>organizaciji</strong>:</label>
    <input asp-for="Organization" class="form-control" />
  </div>
  <div class="mt-3">
