@model RPPP_WebApp.ViewModels.ProjectPartnerFilter

<form asp-action="Index" asp-controller="ProjectPartner" method="get">
  <div class="form-group">
    <label asp-for="Project">Filtriraj po <strong>projektu</strong>:</label>
    <input asp-for="Project" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Worker">Filtriraj po <strong>radniku</strong>:</label>
    <input asp-for="Worker" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Role">Filtriraj po <strong>ulozi</strong>:</label>
    <input asp-for="Role" class="form-control" />
  </div>
  <div class="mt-3">
    <button type="submit" class="btn btn-primary">Filtriraj</button>
    <a asp-action="Index" asp-controller="ProjectPartner" class="btn btn-secondary">Očisti filter</a>
  </div>
</form>
