@model RPPP_WebApp.ViewModels.ProjectRequirementsViewModel

@{
    ViewData["Title"] = "Project Requirements";
}

<h1>Project Requirement</h1>

<p>
    <a asp-action="Create"
       asp-route-page="@Model.PagingInfo.CurrentPage"
       asp-route-sort="@Model.PagingInfo.Sort"
       asp-route-ascending="@Model.PagingInfo.Ascending">Create New</a>
</p>
<pager page-info="@Model.PagingInfo" page-action="Index" page-title="Unesite željenu stranicu" class="float-end"></pager>

<table class="table">
    <thead>
        <tr>
            <th>
            <a asp-route-sort="2" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 2 ? !Model.PagingInfo.Ascending : true)">
                Type
            </a>
            </th>
            <th>
            <a asp-route-sort="3" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                Description
            </a>
            </th>
            <th>
            <a asp-route-sort="4" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 4 ? !Model.PagingInfo.Ascending : true)">
                Project Name
            </a>
            </th>
            <th>
            <a asp-route-sort="5" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 5 ? !Model.PagingInfo.Ascending : true)">
                Priority
            </a>
            </th>
            <th>Requirement Tasks</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProjectRequirement) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequirementPriority.Type)
            </td>
                <td>
                    @string.Join(", ", item.RequirementTask.Select(rt => rt.ProjectWork.Title))
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"
                       asp-route-page="@Model.PagingInfo.CurrentPage"
                       asp-route-sort="@Model.PagingInfo.Sort"
                       asp-route-ascending="@Model.PagingInfo.Ascending">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id"
                       asp-route-page="@Model.PagingInfo.CurrentPage"
                       asp-route-sort="@Model.PagingInfo.Sort"
                       asp-route-ascending="@Model.PagingInfo.Ascending">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id"
                       asp-route-page="@Model.PagingInfo.CurrentPage"
                       asp-route-sort="@Model.PagingInfo.Sort"
                       asp-route-ascending="@Model.PagingInfo.Ascending">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
