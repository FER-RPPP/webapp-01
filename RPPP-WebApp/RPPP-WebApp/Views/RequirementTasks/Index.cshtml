@model RPPP_WebApp.ViewModels.RequirementTasksViewModel

@{
    ViewData["Title"] = "RequirementTask";
}

<h1>RequirementTask</h1>

<p>
    <a asp-action="Create"
       asp-route-page="@Model.PagingInfo.CurrentPage"
       asp-route-sort="@Model.PagingInfo.Sort"
       asp-route-ascending="@Model.PagingInfo.Ascending">Create New</a>
</p>

<partial name="Filter" model="Model.Filter" />
<pager page-info="@Model.PagingInfo" page-action="Index" page-title="Unesite željenu stranicu" class="float-end"></pager>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-route-sort="2" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 2 ? !Model.PagingInfo.Ascending : true)">
                    Planned Start Date
                </a>
            </th>
            <th>
                <a asp-route-sort="3" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Planned End Date
                </a>
            </th>
            <th>
                <a asp-route-sort="4" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 4 ? !Model.PagingInfo.Ascending : true)">
                    Actual Start Date
                </a>
            </th>
            <th>
                <a asp-route-sort="5" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 5 ? !Model.PagingInfo.Ascending : true)">
                    Actual End Date
                </a>
            </th>
            <th>
                <a asp-route-sort="6" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 6 ? !Model.PagingInfo.Ascending : true)">
                    Project Work Title
                </a>
            </th>
            <th>
                <a asp-route-sort="7" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 7 ? !Model.PagingInfo.Ascending : true)">
                    Project Requirement Description
                </a>
            </th>
            <th>
                <a asp-route-sort="8" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 8 ? !Model.PagingInfo.Ascending : true)">
                    Task Status
                </a>
            </th>
            <th>Requirement Tasks</th>

            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RequirementTasks)
        {
            <tr>
                <td>
                    @(item.PlannedStartDate.ToString("dd.MM.yyyy.") ?? "Unknown")
                </td>
                <td>
                    @(item.PlannedEndDate.ToString("dd.MM.yyyy.") ?? "Unknown")
                </td>
                <td>
                    @(item.ActualStartDate?.ToString("dd.MM.yyyy.") ?? "Not started")
                </td>
                <td>
                    @(item.ActualEndDate?.ToString("dd.MM.yyyy.") ?? "Not ended")
                </td>
                <td>
                    @(item.ProjectWork ?? "Unknown")
                </td>
                <td>
                    @(item.RequirementDescription ?? "Unknown")
                </td>
                <td>
                    @(item.TaskStatus ?? "Unknown")
                </td>
                <td>
                    <a asp-action="Edit" 
                       asp-route-id="@item.Id"
                       asp-route-page="@Model.PagingInfo.CurrentPage"
                       asp-route-sort="@Model.PagingInfo.Sort"
                       asp-route-ascending="@Model.PagingInfo.Ascending">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
               
            </tr>
        }
    </tbody>
</table>
